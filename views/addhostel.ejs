<body>
    <%- include('./successpartial') %>
    <%- include('./errorpartial') %>
    <div class="body">
        <h1 style="color: #0B6EB4;font-size: 30px;font-weight: 900;">ADD HOSTEL</h1>
        <div class="box">


            <form action="/addhostel" method="POST" class="row" enctype="multipart/form-data">


                <div class="col">
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="name" name="name">
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="email">admin email</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="email"
                            name="email">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="password">admin password</label>
                        <input type="password" class="form-control" id="password" placeholder="password"
                            name="password">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="town/city/village" name="town">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="district" name="district">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="state" name="state">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="pincode" name="pincode">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="1 sharing price" name="share1">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="2 sharing price" name="share2">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="3 sharing price" name="share3">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="text" class="form-control" placeholder="4 sharing price" name="share4">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <input type="file" class="form-control" placeholder="image" name="image">
                    </div>
                    <button type="submit" class="button">add hostel</button>
                </div>

            </form>
        </div>
    </div>

