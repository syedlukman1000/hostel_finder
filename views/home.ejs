<body>
    <%- include('./successpartial') %>
    <%- include('./errorpartial') %>
    <nav>
        <div class="logo">
            <p style="margin-bottom: 0px;">
                way to hostel
            </p>
        </div>
        <div class="nav_links">
            <% if (user) { %>
            <a href="/" style="margin-right: 50px;">Home</a>
            <a href="/browsehostels" style="margin-right: 50px;">Browse Hostels</a>
            <a href="/signout">sign out</a>
            <% } else { %>
            <a href="/" style="margin-right: 50px;">Home</a>
            <a href="/browsehostels" style="margin-right: 50px;">Browse Hostels</a>
            <a href="/signin" style="margin-right: 50px;">sign in</a>
            <a href="/signup" style="margin-right: 50px;">sign up</a>
            <a href="/addhostel">add hostel</a>
            <% } %>

        </div>
    </nav>


    <div class="background">
        <div class="top_layer">
            <p style="color: white; width: 40%; text-align: center;font-size: 17px;line-height: 30px;">Find your next
                hostel from your
                home. Choose from
                various hostels with
                affordable
                rents. Also share your
                review of hostel
                to help others find best hostel.
            </p>

            <a href="/browsehostels" class="button">Browse Hostels</a>
        </div>
    </div>

    <div class="features">

        <h2 style="padding-bottom: 30px;">F E A T U R E S</h2>

        <div class="infeatures">

            <div class="feabox">
                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor"
                    class="bi bi-diagram-3-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
